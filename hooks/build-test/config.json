{
  "runners": {
    "makefile": ["make"],
    "taskfile": ["task"],
    "npm": ["npm", "run"],
    "pnpm": ["pnpm", "run"],
    "yarn": ["yarn"],
    "bun": ["bun", "run"]
  },
  "commands": {
    "lint": ["lint", "eslint", "check", "lint:fix"],
    "build": ["build", "compile", "tsc"],
    "test": ["test", "spec", "test:unit", "test:integration"]
  },
  "skipPatterns": [
    "*.md",
    "*.json",
    "*.yml",
    "*.yaml",
    "*.txt",
    "*.lock"
  ],
  "timeout": 60000
}
