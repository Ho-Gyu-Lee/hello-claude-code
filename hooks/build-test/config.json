{
  "runners": {
    "makefile": ["make"],
    "cmake": ["cmake", "--build", "build"],
    "cargo": ["cargo"],
    "go": ["go"],
    "dotnet": ["dotnet"],
    "python": ["python", "-m"],
    "taskfile": ["task"]
  },
  "commands": {
    "lint": {
      "makefile": ["lint", "check", "fmt-check"],
      "cargo": ["clippy", "fmt -- --check"],
      "go": ["vet ./...", "fmt -l ."],
      "dotnet": ["format", "--verify-no-changes"],
      "python": ["ruff check .", "flake8", "pylint"]
    },
    "build": {
      "makefile": ["build", "all", "release", "debug"],
      "cmake": ["--target all"],
      "cargo": ["build"],
      "go": ["build ./..."],
      "dotnet": ["build"],
      "python": []
    },
    "test": {
      "makefile": ["test", "check", "tests"],
      "cargo": ["test"],
      "go": ["test ./..."],
      "dotnet": ["test"],
      "python": ["pytest", "unittest"]
    }
  },
  "projectMarkers": {
    "makefile": ["Makefile", "GNUmakefile"],
    "cmake": ["CMakeLists.txt"],
    "cargo": ["Cargo.toml"],
    "go": ["go.mod"],
    "dotnet": ["*.csproj", "*.sln"],
    "python": ["pyproject.toml", "setup.py", "requirements.txt"]
  },
  "skipPatterns": [
    "*.md",
    "*.json",
    "*.yml",
    "*.yaml",
    "*.txt",
    "*.lock",
    "*.toml",
    "*.mod",
    "*.sum"
  ],
  "timeout": 120000
}
